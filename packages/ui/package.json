{
  "name": "@template/ui",
  "version": "0.1.0",
  "description": "Vue 3 UI 컴포넌트 라이브러리",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./style": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:tokens:light": "style-dictionary build --config style-dictionary.light.config.js && node scripts/process-tokens.js",
    "build:tokens:dark": "style-dictionary build --config style-dictionary.dark.config.js && node scripts/process-tokens.js",
    "build:tokens": "pnpm run build:tokens:light && pnpm run build:tokens:dark",
    "extract:tokens": "node scripts/extract-figma-tokens.js",
    "build": "pnpm run build:tokens && vite build",
    "dev": "pnpm run build:tokens && vite build --watch",
    "clean": "rimraf dist",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@template/theme": "workspace:*",
    "@template/types": "workspace:*",
    "naive-ui": "^2.42.0",
    "tw-colors": "^3.3.2",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@storybook/vue3": "^8.6.14",
    "@storybook/vue3-vite": "^8.6.14",
    "@tokens-studio/sd-transforms": "^2.0.1",
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vue/test-utils": "^2.4.0",
    "autoprefixer": "^10.4.21",
    "jsdom": "^24.0.0",
    "postcss": "^8.5.6",
    "rimraf": "^5.0.0",
    "storybook": "^8.6.14",
    "style-dictionary": "^5.0.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.0.0",
    "vue-tsc": "^1.8.0"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
