{
  "name": "@template/ui",
  "version": "0.1.0",
  "description": "Headless UI + Tailwind CSS 기반 UI 컴포넌트 패키지",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./composables": {
      "types": "./dist/composables/index.d.ts",
      "import": "./dist/composables/index.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:theme && vue-tsc --noEmit && vite build",
    "build:theme": "cd ../theme && pnpm build",
    "dev": "pnpm run build:theme && vite build --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "storybook:external": "storybook dev -p 6006 --host 0.0.0.0",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "chromatic": "npx chromatic --project-token=chpt_838670753d3ff1f",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@template/theme": "workspace:*",
    "@template/types": "workspace:*",
    "element-plus": "^2.11.1",
    "ag-grid-community": "^34.1.2",
    "ag-grid-vue3": "^34.1.2",
    "splitpanes": "^4.0.4"
  },
  "devDependencies": {
    "@types/splitpanes": "^2.2.6",
    "autoprefixer": "^10.4.0",
    "chromatic": "^13.1.3",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "unplugin-auto-import": "^20.1.0",
    "unplugin-element-plus": "^0.10.0",
    "unplugin-vue-components": "^29.0.0",
    "vite-plugin-sass-dts": "^1.3.31",
    "vite-svg-loader": "^5.1.0"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  }
}
