{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "preserve",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@template/types": ["../../packages/types/dist"],
      "@template/types/*": ["../../packages/types/dist/*"],
      "@template/utils": ["../../packages/utils/dist"],
      "@template/utils/*": ["../../packages/utils/dist/*"],
      "@template/api": ["../../packages/api/dist"],
      "@template/api/*": ["../../packages/api/dist/*"],
      "@template/ui": ["../../packages/ui/dist"],
      "@template/ui/*": ["../../packages/ui/dist/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "../../node_modules"
  ]
} 