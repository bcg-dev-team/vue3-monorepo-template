{
  "name": "@template/api",
  "version": "0.1.0",
  "description": "API 통신 라이브러리",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --noEmit && tsc -p tsconfig.build.json",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "generate:api": "cd ../.. && node scripts/generate-api.js"
  },
  "dependencies": {
    "@template/types": "workspace:*",
    "@template/utils": "workspace:*",
    "axios": "^1.12.0"
  },
  "peerDependencies": {
    "vitest": "^1.6.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
