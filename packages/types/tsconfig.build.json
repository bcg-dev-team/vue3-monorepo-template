{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "composite": false,
    "incremental": false,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "emitDeclarationOnly": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/__tests__/**/*"
  ]
} 