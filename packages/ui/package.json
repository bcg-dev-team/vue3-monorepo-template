{
  "name": "@template/ui",
  "version": "0.1.0",
  "description": "Headless UI + Tailwind CSS 기반 UI 컴포넌트 패키지",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./composables": {
      "types": "./dist/composables/index.d.ts",
      "import": "./dist/composables/index.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "build:fast": "vite build --config vite.config.fast.ts",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build:analyze": "vite build --mode production && npx vite-bundle-analyzer dist",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "storybook": "storybook dev -p 6006",
    "storybook:external": "storybook dev -p 6006 --host 0.0.0.0",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@template/theme": "workspace:*",
    "@template/types": "workspace:*"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "vite-plugin-sass-dts": "^1.3.31",
    "vite-svg-loader": "^5.1.0",
    "vite-plugin-dts": "^3.0.0",
    "sass": "^1.69.0",
    "rimraf": "^5.0.0",
    "cssnano": "^6.0.0"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  }
}
