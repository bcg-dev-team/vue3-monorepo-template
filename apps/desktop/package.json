{
  "name": "@template/desktop",
  "version": "0.1.0",
  "description": "Vue 3 데스크톱 애플리케이션",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path ../../.gitignore",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@template/api": "workspace:*",
    "@template/theme": "workspace:*",
    "@template/types": "workspace:*",
    "@template/ui": "workspace:*",
    "@template/utils": "workspace:*"
  },
  "devDependencies": {
    "vite-plugin-checker": "^0.10.3",
    "vue-tsc": "^3.0.6"
  }
}
